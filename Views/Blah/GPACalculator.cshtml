@{
    ViewBag.Title = "Erick Vargas";
}
@model FirstASPNETWebApp.Models.GPACalculatorModel

<body>
    <!-- Form-->
    <div class="footer">
        <h2>Grade Calculator</h2>
        <form method="post">
            <label>Assignments</label>
            <input type="number" placeholder="00" min="0" max="100" step="0.01" id="assignments" asp-for="assignments" />
            <br />
            <label>Group Project</label>
            <input type="number" placeholder="00" min="0" max="100" step="0.01" id="group_project"  asp-for="group_projects" />
            <br />
            <label>Quizzes</label>
            <input type="number" placeholder="00" min="0" max="100" step="0.01" id="quizzes"  asp-for="quizzes" />
            <br />
            <label>Exams</label>
            <input type="number" placeholder="00" min="0" max="100" step="0.01" id="exams"   asp-for="exams"/>
            <br />
            <label>INTEX</label>
            <input type="number" placeholder="00" min="0" max="100" step="0.01" id="intex"  asp-for="intex"/>
            <br />
            <input type="submit" value="Submit" id="submitButton" />
            
    
            <!-- This bottom part will show our validator messages.-->
            <div asp-validation-summary="All"></div>
        </form>
    </div>

</body>